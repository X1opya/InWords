<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:variablePadding="true">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/item_bg"/>
            <padding android:bottom="-17dp" android:top="-17dp" android:left="-15dp" android:right="5dp"/>
        </shape>
    </item>

    <item android:state_focused="false">
        <shape >
            <corners android:radius="30dp"/>
            <solid android:color="@color/foreground_serch"/>
            <padding android:bottom="20dp" android:top="20dp" android:left="20dp" android:right="20dp"/>
        </shape>
    </item>
</selector>